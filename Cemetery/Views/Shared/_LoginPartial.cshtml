@inject Microsoft.AspNetCore.Identity.SignInManager<Cemetery.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="LogOff" asp-controller="Account">
        <ul class="nav nav-bar">
            <li class="text-white nav-link"> Bejelentkezve a(z) @User.Identity.Name e-mail címmel. </li>
            <li class="text-white nav-link"><a href="javascript:document.getElementById('logoutForm').submit()"> Kijelentkezés </a></li>
        </ul>
    </form>
}
else
{
    <ul class="navbar navbar-nav">
        <li class="nav-item">
            @*@Html.ActionLink("Sign Up", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })*@
            <a class="nav-link text-white" id="registerLink" asp-controller="Account" asp-action="Register">Regisztráció</a>
        </li>
        <li>
            @* @Html.ActionLink("Sign In", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })*@
            <a class="nav-link text-white" id="loginLink" asp-controller="Account" asp-action="Login">Bejelentkezés</a>
        </li>
    </ul>
}
