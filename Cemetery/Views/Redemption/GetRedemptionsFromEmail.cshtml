@model List<Cemetery.Models.Redemption>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">A bejelentkezési e-mail címen található megváltások listája</h2>
        </div>
    </div>
    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Sírgondozó személy
                    </th>
                    <th>
                        Sírhely
                    </th>
                    <th>
                        Megváltó személy
                    </th>
                    <th>
                        Megváltás időpontja
                    </th>
                    <th>
                        Megváltás időtartama(év)
                    </th>
                    <th>
                        Megváltás lejárta
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%"> @obj.Tender.RenterLastname @obj.Tender.RenterFirstname   </td>
                    <td width="20%"> @obj.Grave.Row. sor, @obj.Grave.Side oldal, @obj.Grave.Parcel. parcella, @obj.Grave.GraveType típus, @obj.Grave.Size méret </td>
                    <td width="15%"> @obj.Renter.RenterLastname @obj.Renter.RenterFirstname  </td>
                    <td width="15%"> @obj.RedemptionDate       </td>
                    <td width="15%"> @obj.RedemptionPeriod   </td>
                    <td width="15%"> @obj.RedemptionDate.AddYears(@obj.RedemptionPeriod); </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nincsenek az e-mail címhez tartozó sírmegváltások.</p>
    }
</div>
